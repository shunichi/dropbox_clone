.col-md-2
  %ul.list-group.inode-list
    %li.list-group-item= link_to 'home', current_user.inode

.col-md-10
  %label= @inode.path.pluck(:name).join('/')

  = form_tag inode_share_path(@inode) do
    = text_field_tag :email, nil, class: 'form-control', placeholder: 'Email'
    -#= submit_tag 'add share', class: 'btn btn-default'

  %table.table
    - @followers.each do |follower|
      %tr
        %td= follower.email
        %td= link_to 'delete', inode_share_path(@inode, user_id:follower), method: :delete

